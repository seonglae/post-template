{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "declaration": false,
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "bin/**/*"]
}
